<div x-data="profitCalculator()" class="bg-base-100 p-4 rounded-lg shadow-sm border border-base-200">
    <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
        <span>ðŸ§®</span> Profit & Max Buy Calculator
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Inputs -->
        <div class="space-y-3">
            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text text-xs font-bold uppercase opacity-70">Est. Sale Price</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 opacity-50">$</span>
                    <input type="number" x-model.number="salePrice" class="input input-bordered w-full pl-8 font-bold" @input="calculate" />
                </div>
            </div>

            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text text-xs opacity-70">Shipping Cost (Est.)</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 opacity-50">$</span>
                    <input type="number" x-model.number="shipping" class="input input-sm input-bordered w-full pl-8" @input="calculate" />
                </div>
            </div>

             <div class="form-control w-full">
                <label class="label">
                    <span class="label-text text-xs opacity-70">Platform Fee % (eBay/Posh)</span>
                </label>
                <div class="relative">
                     <input type="number" x-model.number="feePercent" class="input input-sm input-bordered w-full pr-8" @input="calculate" />
                     <span class="absolute right-3 top-1/2 -translate-y-1/2 opacity-50">%</span>
                </div>
            </div>
             
             <div class="form-control w-full">
                <label class="label">
                    <span class="label-text text-xs opacity-70">Min. Target Profit</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 opacity-50">$</span>
                    <input type="number" x-model.number="targetProfit" class="input input-sm input-bordered w-full pl-8 text-success font-semibold" @input="calculate" />
                </div>
            </div>
        </div>

        <!-- Result -->
        <div class="flex flex-col justify-center items-center bg-base-200 rounded-xl p-6 border-2" 
             :class="maxBuyPrice > 0 ? 'border-success/50' : 'border-error/50'">
            <p class="text-sm font-bold uppercase opacity-60 mb-2">My Max Buy Price</p>
            <div class="text-5xl font-black tracking-tight" 
                 :class="maxBuyPrice > 0 ? 'text-success' : 'text-error'"
                 x-text="`$${maxBuyPrice.toFixed(2)}`">
                $0.00
            </div>
            
             <div class="mt-4 w-full space-y-2">
                 <div class="flex justify-between text-xs opacity-70">
                    <span>Fees ({(feePercent)}%)</span>
                    <span x-text="`-$${(salePrice * (feePercent/100)).toFixed(2)}`"></span>
                 </div>
                 <div class="flex justify-between text-xs opacity-70">
                    <span>Shipping</span>
                    <span x-text="`-$${shipping.toFixed(2)}`"></span>
                 </div>
                 <div class="flex justify-between text-xs font-bold text-success">
                    <span>Target Profit</span>
                    <span x-text="`-$${targetProfit.toFixed(2)}`"></span>
                 </div>
             </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('profitCalculator', () => ({
            salePrice: 0,
            shipping: 10, // Default est shipping
            feePercent: 13, // Default eBay
            targetProfit: 15, // Default min profit
            maxBuyPrice: 0,

            init() {
                // If a parent component passes an estimated price, use it
                this.$watch('salePrice', () => this.calculate());
            },

            calculate() {
                const fees = this.salePrice * (this.feePercent / 100);
                const costs = fees + this.shipping + this.targetProfit;
                const max = this.salePrice - costs;
                this.maxBuyPrice = max > 0 ? max : 0;
                
                // Dispatch event for parent to know
                this.$dispatch('max-buy-update', { value: this.maxBuyPrice });
            }
        }));
    });
</script>
